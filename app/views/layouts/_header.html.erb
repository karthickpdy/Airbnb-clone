                                        <input type="text" name="city"class="input-small form-control" placeholder="Search" style="margin-left:20px;" />
                                        <select  name="guest" class="input-mini form-control">
                                            <%(1..15).to_a.push("16").each do |e|%>
                                            <option value=<%=e.to_i%>><%=e.to_i%></option>
                                            <%end%>
                                        </select>
                                        <input type="date" name="from" class="input-medium form-control">
                                        <input type="date" name="to" class="input-medium form-control">

                                        <span class="input-group-btn">
                                            <button class="btn btn-primary" type="submit">
