                    <ul class="dropdown-menu" >
                 
                        <li> <%= link_to 'Add Listing', new_property_url %></li>
                        <li> <%= link_to 'View Listing', properties_url %></li>
                        <li> <%= link_to 'My Listing', properties_url(:mylisting => true) %></li>
                

                    </ul>

                    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-plane icon-white"></i>Bookings <b class="caret"></b></a>
                    <ul class="dropdown-menu" >
                      <li> <%= link_to 'My Bookings', bookings_url %></li>
                      <li> <%= link_to 'My Properties Bookings', bookings_url(:mybooking=>true) %></li>
               

                    </ul>



