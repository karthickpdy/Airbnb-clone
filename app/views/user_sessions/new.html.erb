<h1>Login</h1>

<% form_for @user_session, :as => :user_session, :url => { :action => "create" },  :html => {:class => "form-horizontal"} do |f| %>
<%= f.error_messages %>
<div class="control-group">
  <%= f.label  :username,"", :class =>"control-label"  %>
  <%= f.text_field :username ,:class =>"controls"%>
</div>
<div class="control-group">
  <%= f.label :password ,"", :class =>"control-label"%>
  <%= f.password_field :password ,:class =>"controls"%>

</div>
<div class="control-group">
  
  <%= f.check_box :remember_me ,:class =>"controls" %>
  <%= f.label :remember_me ,"", :class =>"control-label" %>

</div>
<div class="control-group">
  <%= f.submit "Login", :class => "btn btn-primary login"%>

</div>
<% end %>